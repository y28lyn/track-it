<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TrackIT.ViewModel"
             x:DataType="viewmodel:MainViewModel"
             x:Class="TrackIT.MainPage"
             Title="Accueil">
    <!-- Contenu de la page -->
        <StackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
            <Entry x:Name="EmailEntry" Placeholder="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Mot de passe" IsPassword="True" />
            <Button Text="Se connecter" Clicked="OnLoginButtonClicked" />
            <Button Text="Pas encore inscrit ?" Command="{Binding NavigateToRegister}" />
        </StackLayout>
</ContentPage>
