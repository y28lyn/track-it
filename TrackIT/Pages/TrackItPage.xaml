             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:TrackIT.ViewModel"
             x:DataType="viewmodel:TrackItViewModel"
             x:Class="TrackIT.TrackItPage"
             Title="Track It">
